

<%= form_for :gallery, html: { multipart: true},remote: true do |f|  %>
     <div class="container">
		<div class="col-md-6">
		    <div class="form-group">
		        
		        <div class="input-group">
		            <span class="input-group-btn">
		                <span class="btn btn-default btn-file">
		                    Browseâ€¦ <input type="file" id="imgInp"> <%= f.file_field :image ,id: "imgInp"%>
		                </span>
		            </span>
		            <input type="text" class="form-control" readonly>
		        </div>
		        
		    </div>
		</div>
		<div class="col-md-6">
		<%= f.submit "Upload",class: "btn btn-primary" %>
		</div>
	</div>
    


<% end %>





<div class="container">
<div class="row"><h3>All Images</h3></div>
	<div class="row">
		<% @galleries.each do |gallery| %>
			<div class="col-lg-4 col-md-4 col-sm-4 col-xs-4 gallery_outer">
			<a href="<%= gallery.image.url %>" class="image_link">
				<%= image_tag gallery.image.url, class: "gallery_image" %>
			</a>
			<div class="icon_container">
			<%= link_to profileimage_photo_path( gallery.id), method: :put, data: { confirm: 'Are you want the cover Image ?' }, remote: true,class: "gallery_icon profileimage_icon", title: "Profile Photo" do %>
   			  		 <i class="glyphicon glyphicon-user"></i>
    			<% end %>
			<%= link_to cover_photo_path( gallery.id), method: :put, data: { confirm: 'Are you want the cover Image ?' }, remote: true,class: "gallery_icon cover_image", title: "Cover Image" do %>
   			  		 <i class="glyphicon glyphicon-picture"></i>
    			<% end %>
			<%= link_to photo_path( gallery.id), method: :delete, data: { confirm: 'Are you sure?' }, remote: true,class: " gallery_icon trash_delete", title: "Trash" do %>
   			  		 <i class="glyphicon glyphicon-trash"></i>
    			<% end %>

					
				

    			</div>
			</div>
		<% end %>
	</div>

</div>

