<div class="Profile_coverimage" style='background-image: url("<%= @cover %>");height: 600px;background-size: cover;'>

<div class="profileimage">
<div class="cover_image_icon">
<a href="#"  data-toggle="modal" data-target="#myModal" > <span class="glyphicon glyphicon-pencil"></span></a>  
</div>
<div class="image_cont">
<%= image_tag @profile_pic ,class: "my_image" %>
</div>
<div class="full_name_container">
	<h3><%= @profile.first_name %> <%= @profile.last_name %></h3>
</div>
</div>

</div>
<div class="container-fuild">
<nav class="navbar navbar-inverse">
  <div class="container-fluid">
    <div class="navbar-header">
      <a class="navbar-brand" href="#"><%= @profile.first_name %> <%= @profile.last_name   %></a>
    </div>
    <ul class="nav navbar-nav">
      <li class="active"><a href="#">Home</a></li>
      <li><%= link_to 'Edit Profile', user_profile_index_path(current_user)%></li>
      <li><%= link_to "Photos",photos_path %></li>
      <li><%= link_to "My Friends",myfriends_friends_path %></li>
    </ul>
  </div>
</nav>

</div>
<div class="container-fuild">
	<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
	<section>
		<div class="about_me">
		<h2>About Me</h2>
		<h5>NAME: <%= @profile.first_name %> <%= @profile.last_name %></h5>
		<p>ADDRESS: <%= @profile.address %>,<%= @profile.state %>,<%= @profile.country %> </p>
		</div>
	</section>
	
	<iframe src="https://www.google.com/maps/embed/v1/place?key=AIzaSyAOVoPJ5NjizyRS4Bk5PD4rj3DKdn559Ck&q=<%= @profile.address %>,<%= @profile.state %>,<%= @profile.country %>" width="450" height="450" frameborder="0" style="border:0" allowfullscreen></iframe>
	<section>

	</section>

	</div>
	<div class="col-lg-6 col-md-6 col-sm-12 col-xs-12">



	</div>
	<div class="col-lg-3 col-md-3 col-sm-12 col-xs-12">
	</div>
</div>



	<div class="container">
 
  <!-- Modal -->
  <div class="modal fade" id="myModal" role="dialog">
    <div class="modal-dialog">
    
      <!-- Modal content-->
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal">&times;</button>
          <h4 class="modal-title">All images </h4>
        </div>
        <div class="modal-body">
          <p><% @galleries.inspect%></p>
          <ul class="all_images">
          <% @galleries.each do |gallery| %>
          <li class="col-lg-2 col-md-2 col-sm-12 col-xs-12 single_li">
          <span class="glyphicon glyphicon-ok sinle_icon"></span>  
          <%= image_tag gallery.image.url, class: "single_image", id:  gallery.id  %>
          </li>
          <% end %>
          </ul>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          
   
          <%= link_to "New Cover Image" ,cover_popup_photo_path(1) , method: :put,class: "btn btn-success new_cover_image disabled" %>
        </div>
      </div>
      
    </div>
  </div>
  
</div>